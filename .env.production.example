# Production Environment Configuration
# Copy this file to .env and update with your production values

# ============================================================================
# Server Configuration
# ============================================================================
APP_ENV=production
APP_PORT=8080
APP_HOST=0.0.0.0

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=gofiber_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=gofiber_db
DB_SSL_MODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate a secure random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE_HOURS=720

# ============================================================================
# OAuth Configuration - Google
# ============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=https://api.yourdomain.com/api/v1/auth/google/callback

# ============================================================================
# Frontend URL
# ============================================================================
FRONTEND_URL=https://yourdomain.com

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Bunny CDN Storage Configuration
# ============================================================================
# Sign up at: https://bunny.net
BUNNY_STORAGE_API_KEY=your_bunny_storage_api_key
BUNNY_STORAGE_ZONE=your_storage_zone_name
BUNNY_STORAGE_HOSTNAME=storage.bunnycdn.com
BUNNY_CDN_URL=https://your-storage-zone.b-cdn.net

# ============================================================================
# Bunny Stream Configuration (Video Streaming)
# ============================================================================
BUNNY_STREAM_API_KEY=your_bunny_stream_api_key
BUNNY_STREAM_LIBRARY_ID=your_library_id

# ============================================================================
# Cloudflare R2 Configuration (Alternative Storage)
# ============================================================================
# Get credentials from: https://dash.cloudflare.com/
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-r2-public-url.com

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MINUTES=1

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# Security
# ============================================================================
ENABLE_HTTPS=true
TRUSTED_PROXIES=127.0.0.1

# ============================================================================
# Email Configuration (Optional - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# Monitoring (Optional)
